{
  "name": "sanitycheck",
  "version": "1.0.0",
  "description": "AI-powered browser extension that spots logical gaps in articles",
  "main": "build/backend/index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:db": "docker-compose up -d",
    "dev:db:stop": "docker-compose down",
    "build": "node scripts/build.js",
    "build:backend": "node scripts/build.js --backend-only",
    "build:extension": "node scripts/build.js --extension-only",
    "start": "node build/backend/index.js",
    "preview": "node scripts/preview-extension.js",
    "pipeline": "npx tsx scripts/run-pipeline.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@prisma/client": "^6.2.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "prisma": "^6.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@mozilla/readability": "^0.6.0",
    "@types/chrome": "^0.1.32",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "archiver": "^7.0.1",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^3.2.4"
  }
}
