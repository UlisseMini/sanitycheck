{
  "name": "sanitycheck",
  "version": "1.0.0",
  "description": "AI-powered browser extension that spots logical gaps in articles",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/backend/app.ts",
    "dev:db": "docker-compose up",
    "dev:db:stop": "docker-compose down",
    "build": "node scripts/build.cjs",
    "build:extension": "node scripts/build.cjs --extension-only",
    "start": "bun run src/backend/app.ts",
    "preview": "node scripts/preview-extension.js",
    "pipeline": "bun run scripts/run-pipeline.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/static": "^1.4.7",
    "@prisma/client": "^6.2.1",
    "elysia": "^1.4.19",
    "prisma": "^6.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@mozilla/readability": "^0.6.0",
    "@types/chrome": "^0.1.32",
    "archiver": "^7.0.1",
    "bun-types": "^1.3.5",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^3.2.4"
  }
}
