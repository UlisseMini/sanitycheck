generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Annotation {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  // Source info
  url         String
  title       String?
  
  // The selected text
  quote       String
  
  // User's annotation (e.g., "This is a non-sequitur because...")
  annotation  String
  
  // Optional: type of fallacy
  fallacyType String?
  
  // Optional: user identifier (anonymous by default)
  userId      String?
  
  // Metadata
  userAgent   String?
  
  @@index([url])
  @@index([fallacyType])
  @@index([createdAt])
}
